<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_offwhite_background_color"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/tv_top_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/app_taxt_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:text="View Stored Actions" />


    <TextView
        android:id="@+id/tv_result_view"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#9BC9CF"
        android:gravity="center_vertical"
        android:hint="0"
        android:padding="20dp"
        android:textColor="@color/app_taxt_color"
        android:textSize="90sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top_small" />

    <Button
        android:id="@+id/btn1"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_taxt_color"
        android:onClick="onDeleteAllClick"
        android:text="AC"
        android:textColor="@color/app_offwhite_background_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_view" />

    <Button
        android:id="@+id/btn2"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#2DA19D"
        android:onClick="onDeleteClick"
        android:text="DEL"
        android:textColor="@color/app_taxt_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/tv_result_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn3"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="SR"
        android:textColor="@color/app_taxt_color"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/tv_result_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn8_3"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="+"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn8_2"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn7_3"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="-"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn7_2"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn6_3"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="x"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn6_2"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn5"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="/"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn4"

        app:layout_constraintTop_toBottomOf="@id/tv_result_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn4"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_main_color"
        android:onClick="onOperatorClick"
        android:text="^2"
        android:textColor="@color/app_taxt_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/tv_result_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn6"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="7"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"

        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn6_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn6_1"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="8"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn6_2"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn6_2"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="9"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn6_3"
        app:layout_constraintStart_toEndOf="@id/btn6_1"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn7"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="4"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btn7_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn7_1"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="5"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btn7_2"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn7_2"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="6"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btn7_3"
        app:layout_constraintStart_toEndOf="@id/btn7_1"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn8"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="1"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@id/btn8_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn8_1"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="2"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@id/btn8_2"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn8_2"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="3"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@id/btn8_3"
        app:layout_constraintStart_toEndOf="@id/btn8_1"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:gravity="center"
        android:onClick="onDigitClick"
        android:text="."
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn9_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />


    <Button
        android:id="@+id/btn9_1"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_offwhite_background_color"
        android:onClick="onDigitClick"
        android:text="0"
        android:textColor="@color/app_taxt_color"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn9_2"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />


    <Button
        android:id="@+id/btn9_2"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/app_taxt_color"
        android:onClick="onEqualClick"
        android:text="="
        android:textColor="@color/app_offwhite_background_color"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn8_2"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />


</androidx.constraintlayout.widget.ConstraintLayout>